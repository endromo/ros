{{page-title "Customer"}}

<br><br><br>

<div style="text-align: center;">

    <div class="row field">
        <div class="col-sm" style="text-align: right;">
            <label>UserName</label>
        </div>
        <div class="col-sm" style="text-align: left;">
            <input type="text" placeholder="username" id="username" name="username" style="margin-bottom: 10px;"
                autofocus {{on "change" this.updateUsername}} />

        </div>
    </div>

    <div class="row field">
        <div class="col-sm" style="text-align: right;">
            <label>Password</label>
        </div>
        <div class="col-sm" style="text-align: left;">
            <input type="password" placeholder="password" id="password" style="margin-bottom: 10px;" />
        </div>

    </div>

    <div class="row field">
        <div class="col-sm" style="text-align: right;">

        </div>
        <div class="col-sm" style="text-align: left;">
            <button {{on "click" this.customerOn}}>Login</button>
        </div>

    </div>

    <br>

    <div class="row field">
        <div class="col-sm" style="text-align: right;">

        </div>

    </div>

</div>

{{outlet}}

<br>
<br>

{{#if this.model}}
<div class="col-12 col-md-8 col-lg-4 mx-auto my-4">

    <h2>Customer Account List</h2>
    
    <table align="center">
        
        {{#each this.model as |item|}}
        <tr>
            <td>Username</td>
            <td>:</td>
            <td>{{item.username}}</td>
        </tr>
        <tr>
            <td>Password</td>
            <td>:</td>
            <td>{{item.pwd}}</td>
        </tr>
        <tr>
            <td>
                <hr>
            </td>
        </tr>
        {{/each}}
    </table>
</div>
{{else}}

<h2>.Empty.</h2>

{{/if}}